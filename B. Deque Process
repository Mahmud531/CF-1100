#include<bits/stdc++.h>
using namespace std;
using ll = long long;



int main(){
    ios::sync_with_stdio(0);cin.tie(0);

    int t;cin>>t;
    while(t--){
        int n;cin>>n;

        deque<int>d;
        for(int i = 0;i<n;i++){
            int x;cin>>x;
            d.push_back(x);
        }
        
        int flag = true;
        while(!d.empty()){
            if(flag){
                if(d.front()<d.back()){
                    cout<<"L";
                    d.pop_front();
                }
                else{
                    cout<<"R";
                    d.pop_back();
                }
            }
            else{
                if(d.front()>d.back()){
                    cout<<"L";
                    d.pop_front();
                }
                else{
                    cout<<"R";
                    d.pop_back();
                }
            }
            flag = !flag;
        }
        cout<<"\n";
    }   
    return 0;
}


